{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
   ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
      "semi": [2, "never"],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/button-has-type": false,
      "import/no-extraneous-dependencies": false,
      "import/prefer-default-export": false
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  }
}
